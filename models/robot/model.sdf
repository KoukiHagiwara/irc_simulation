<?xml version="1.0" ?>
<sdf version="1.9">
  <model name="my_robot">
    <static>false</static>
    <plugin filename="libignition-gazebo-sensors-system.so"
      name="ignition::gazebo::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
    
  <!--  <plugin
        filename="libignition-gazebo-diff-drive-system.so"
        name="ignition::gazebo::systems::DiffDrive">
        <left_joint>left_wheel_joint</left_joint>
        <right_joint>right_wheel_joint</right_joint>
        <wheel_separation>1.2</wheel_separation>
        <wheel_radius>0.4</wheel_radius>
        <odom_publish_frequency>1</odom_publish_frequency>
        <topic>cmd_vel</topic>
    </plugin> -->

    <link name="base_link">
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.1</ixx>
          <iyy>0.1</iyy>
          <izz>0.1</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://robot/robo.stl</uri>
          </mesh>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>model://robot/robo.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <link name='left_wheel'>
        <pose relative_to="base_link">-0.18 0 -0.03 0 3 0</pose>
        <inertial>
            <mass>1</mass>
            <inertia>
                <ixx>0.043333</ixx>
                <ixy>0</ixy>
                <ixz>0</ixz>
                <iyy>0.043333</iyy>
                <iyz>0</iyz>
                <izz>0.08</izz>
            </inertia>
        </inertial>

        <visual name='visual'>
            <geometry>
                <mesh>
                  <scale>1 1 1</scale>
                  <uri>model://robot/wheel.dae</uri>
                </mesh>
            </geometry>
            <material>
                <ambient>1.0 0.0 0.0 1</ambient>
                <diffuse>1.0 0.0 0.0 1</diffuse>
                <specular>1.0 0.0 0.0 1</specular>
            </material>
        </visual>
        <collision name='collision'>
            <geometry>
                <mesh>
                    <scale>1 1 1</scale>
                    <uri>model://robot/wheel.stl</uri>
                </mesh>
            </geometry>
        </collision>
    </link>
    <joint name='left_wheel_joint' type='revolute'>
        <pose relative_to='left_wheel'/>
        <parent>base_link</parent>
        <child>left_wheel</child>
        <axis>
            <xyz expressed_in='__model__'>1 0 0</xyz> <!--can be defined as any frame or even arbitrary frames-->
            <limit>
                <lower>-1.79769e+308</lower>    <!--negative infinity-->
                <upper>1.79769e+308</upper>     <!--positive infinity-->
            </limit>
        </axis>
    </joint>

    <link name='right_wheel'>
        <pose relative_to="base_link">0.18 0 -0.03 0 0 0</pose> <!--angles are in radian-->
        <inertial>
            <mass>1</mass>
            <inertia>
                <ixx>0.043333</ixx>
                <ixy>0</ixy>
                <ixz>0</ixz>
                <iyy>0.043333</iyy>
                <iyz>0</iyz>
                <izz>0.08</izz>
            </inertia>
        </inertial>
        <visual name='visual'>
            <geometry>
                <mesh>
                    <scale>1 1 1</scale>
                    <uri>model://robot/wheel.dae</uri>
                </mesh>
            </geometry>
            <material>
                <ambient>1.0 0.0 0.0 1</ambient>
                <diffuse>1.0 0.0 0.0 1</diffuse>
                <specular>1.0 0.0 0.0 1</specular>
            </material>
        </visual>
        <collision name='collision'>
            <geometry>
                <mesh>
                    <scale>1 1 1</scale>
                    <uri>model://robot/wheel.stl</uri>
                </mesh>
            </geometry>
        </collision>
    </link>
    <joint name='right_wheel_joint' type='revolute'>
        <pose relative_to='right_wheel'/>
        <parent>base_link</parent>
        <child>right_wheel</child>
        <axis>
            <xyz expressed_in='__model__'>1 0 0</xyz>
            <limit>
                <lower>-1.79769e+308</lower>    <!--negative infinity-->
                <upper>1.79769e+308</upper>     <!--positive infinity-->
            </limit>
        </axis>
    </joint>


    <link name="camera_link">
      <pose relative_to='__model__'>0 0.15 0.325 0 0.3 1.6</pose><!--車輪間同士の距離がx軸、奥ゆきがy軸、ピッチがカメラをどのくらい下に向けるかを表している   -->
      <inertial>
        <mass>0.01</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <iyy>0.0001</iyy>
          <izz>0.0001</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <visual name="camera_visual">
        <geometry>
          <box><size>0.063 0.07 0.03</size></box>
        </geometry>
        <material>
          <diffuse>0 0 1 1</diffuse>
          <ambient>0 0 1 1</ambient>
        </material>
      </visual>
      <sensor name="camera_sensor" type="camera">
        <camera>
	        <camera_info_topic>camera_info</camera_info_topic>	      
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
        <topic>/camera_sensor</topic>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
      </sensor>
    </link>

    <joint name="camera_joint" type="fixed">
      <parent>base_link</parent>
      <child>camera_link</child>
      <!--pose>0.2 0 0.1 0 0 0</pose-->
    </joint>

  </model>
</sdf>
